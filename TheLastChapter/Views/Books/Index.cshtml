@model IEnumerable<TheLastChapter.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table sortable table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a href="#">Author</a>
            </th>
            <th>
                <a href="#">Title</a>
            </th>
            <th>
            </th>
            <th>
                <a href="#">Price</a>
            </th>
            <th>
                <a href="#">Mature Content</a>
            </th>
            <th>
                <a href="#">Category</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.Image != null)
                {
                    <img src="~/img/books/@item.Image" alt="Book Cover" class="thumb" />
                } 
                else
                {
                    <img src="~/img/books/placeholder.gif" alt="Book Cover" class="thumb" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatureContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
